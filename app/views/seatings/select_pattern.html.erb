          <% end %>

          <%= link_to new_seating_path(pattern: 'C') ,class: "seat-link" do %>
            <%= image_tag("seatC.png", class: "seat-image") %>
            <div class="select-text">Max Guest 64</div>
          <% end %>
      </div>
  </div>
</div>